<div class="form-group">
  <label>Email</label>
  <input class="sign-up__form__email" type="email" value={{email}} oninput={{action (mut email) value='target.value'}}>
</div>

<div class="form-group">
  <label>Password</label>
  <input class="sign-up__form__password" type="password" value={{password}} oninput={{action (mut password) value='target.value'}}>
</div>

<div class="form-group">
  <label>Password Confirmation</label>
  <input class="sign-up__form__password-confirmation" type="password" value={{passwordConfirmation}} oninput={{action (mut passwordConfirmation) value='target.value'}}>
</div>
<button class="sign-up__form__submit" {{action onFormSubmission email password passwordConfirmation}}>Continue</button>
